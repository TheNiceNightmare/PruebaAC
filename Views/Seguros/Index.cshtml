@model IEnumerable<ConsultorioSeguros.Models.Seguro>

@{
    ViewData["Title"] = "Seguros";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1000px;
        }

        .header {
            margin-bottom: 30px;
            text-align: center;
        }

            .header h1 {
                color: #007bff;
            }

        .table th, .table td {
            text-align: center;
        }

        .btn-primary, .btn-warning, .btn-info, .btn-danger {
            margin: 2px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #e0a800;
                border-color: #d39e00;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Seguros</h1>
            <p>
                <a asp-action="Create" class="btn btn-primary">Crear nuevo seguro</a>
            </p>
        </div>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Suma Asegurada</th>
                    <th>Prima</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var seguro in Model)
                {
                    <tr>
                        <td>@seguro.Nombre</td>
                        <td>@seguro.Codigo</td>
                        <td>@seguro.SumaAsegurada</td>
                        <td>@seguro.Prima</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@seguro.Id" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@seguro.Id" class="btn btn-info">Detalles</a>
                            <form asp-action="Delete" asp-route-id="@seguro.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Scripts para jQuery y Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
